{% extends 'layout.html.twig' %}

{% block panel_title %}
    Perfil de contacto
{% endblock %}

{% block panel_body %}
  {% for profiles in profile%}
    <div class=" col-md-9 col-lg-9 "> 
      <table class="table table-user-information">
        <tbody>
          <tr>
            <td>{{ 'contact.name'|trans({}, 'messages') }}</td>
            <td>{{ profiles.name }}</td>
          </tr>
          <tr>
            <td>{{ 'contact.last_name'|trans({}, 'messages') }}</td>
            <td>{{ profiles.lastname }}</td>
          </tr>
          <tr>
            <td>{{ 'contact.city'|trans({}, 'messages') }}</td>
            <td>{{ profiles.city }}</td>
          </tr>
          <tr>
            <td>{{ 'contact.address'|trans({}, 'messages') }}</td>
            <td>{{ profiles.address }}</td>
          </tr>
          <tr>
            <td>{{ 'contact.phone'|trans({}, 'messages') }}</td>
            <td>{{ profiles.phone }}</td>
          </tr>
          <tr>
            <td>{{ 'contact.mobile_phone'|trans({}, 'messages') }}</td>
            <td>{{ profiles.mobilephone }}</td>
          </tr>
          <tr>
            <td>{{ 'contact.email'|trans({}, 'messages') }}</td>
            <td>{{ profiles.email }}</td>
          </tr>
          <tr>
            <td>{{ 'contact.company'|trans({}, 'messages') }}</td>
            <td>{{ profiles.company }}</td>
          </tr>
          <tr>
            <td>{{ 'contact.annotations'|trans({}, 'messages') }}</td>
            <td>{{ profiles.Annotations }}</td>
          </tr>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
    </div>
    <div class="panel-footer">
      <a href="{{ path('editContact', { 'id': profiles.id }) }}" class="btn btn-md btn-success">
        <i class="glyphicon glyphicon-edit"></i>
      </a>
      <a href="{{ path('deleteContact', { 'id': profiles.id }) }}" class="btn btn-md btn-danger">
        <i class="glyphicon glyphicon-remove"></i>
      </a>
      <a href="{{ path('contact') }}" class="btn btn-md btn-default">Volver</a>
    </div>
  {% endfor %}
{% endblock %}