{% extends 'layout.html.twig' %}

  {% block panel_title %}
    {{ 'panel_title.contacts'|trans({}, 'messages') }}
  {% endblock %}

  {% block panel_body %}
    <div class="container text-center">
      <div class="row">
        <div class="col-xs-6 col-sm-4 col-md-4">
          {{ form_start(form) }}
          {{ form_widget(form) }}
          </div>
        <div class="pull-left">
          <input type="submit" value="{{ 'btn.search'|trans({}, 'buttons') }}"
            class="{{ button_css|default("btn btn-success pull-right") }}" />
          {{ form_end(form) }}
        </div>
      </div>
        </div>
    </div>
    <div class="widget-content">
      <table id="contacts" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>{{ 'table.name'|trans({}, 'messages') }}</th>
            <th>{{ 'table.last_name'|trans({}, 'messages') }}</th>
            <th>{{ 'table.phone'|trans({}, 'messages') }}</th>
            <th>{{ 'table.mobile_phone'|trans({}, 'messages') }}</th>
            <th>{{ 'table.email'|trans({}, 'messages') }}</th>
            <th>{{ 'table.company'|trans({}, 'messages') }}</th>
            <th>{{ 'table.profile'|trans({}, 'messages') }}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            {% for contacts in contacts %}
            <td>{{ contacts.name }}</td>
            <td>{{ contacts.lastname }}</td>
            <td>{{ contacts.phone }}</td>
            <td>{{ contacts.mobilephone }}</td>
            <td>{{ contacts.email }}</td>
            <td>{{ contacts.company }}</td>
            <td>
            <a href={{ path('contactProfile', {'id': contacts.id}) }}>
              <button width="auto" type="button" class="btn btn-success btn-xs">
                <i class="glyphicon glyphicon-user">
              </button></a></td>
             </tr>
            {% endfor %}
        </tbody>
      </table>
    </div>
    {{ knp_pagination_render(contacts) }}
  {% endblock %}
