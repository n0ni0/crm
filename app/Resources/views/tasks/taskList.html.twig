{% extends 'layout.html.twig' %}

  {% block panel_title %}
    {{ 'panel_title.tasks'|trans({}, 'messages') }}
  {% endblock %}

  {% block panel_body %}
    <div class="widget-content">
      <table id="contacts" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>{{ 'table.title'|trans({}, 'messages') }}</th>
            <th>{{ 'table.category'|trans({}, 'messages') }}</th>
            <th>{{ 'table.user'|trans({}, 'messages') }}</th>
            <th>{{ 'table.date'|trans({}, 'messages') }}</th>
            <th>{{ 'table.show'|trans({}, 'messages') }}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            {% for task in task %}
            <td>{{ task.title }}</td>
            <td>{{ task.taskCategory }}</td>
            <td>{{ task.user }}</td>
            <td>{{ task.starttime|date('d-m-Y H:i') }}</td>
            <td>
            <a href="#">
              <button width="auto" type="button" class="btn btn-success btn-xs">
                <i class="glyphicon glyphicon-user">
              </button></a></td>
             </tr>
            {% endfor %}
        </tbody>
      </table>
    </div>
  {% endblock %}
