{% extends 'layout.html.twig' %}

{% block panel_title %}
  {{ 'panel_title.task'|trans({}, 'messages') }}
{% endblock %}

{% block panel_body %}
  <div id="main" class="container">
    <div class="form-horizontal">

      <div class="form-group field_string">
        <label class="col-md-2 control-label">
          {{ 'task.title'|trans({}, 'messages') }}
        </label>
        <div class="col-md-10">
          <div class="form-control input-sm">
            {{ task.title }}
          </div>
        </div>
      </div>

      <div class="form-group field_text">
        <label class="col-md-2 control-label">
          {{ 'task.category'|trans({}, 'messages') }}
        </label>
        <div class="col-md-2">
          <div class="form-control input-sm text-center">
            {{ task.taskcategory }}
          </div>
        </div>
        <label class="col-md-2 control-label">
          {{ 'task.state'|trans({}, 'messages') }}
        </label>
        <div class="col-md-2">
          <div class="form-control input-sm text-center">
            {{ task.state }}
          </div>
        </div>
        <label class="col-md-2 control-label">
          {{ 'task.start_time'|trans({}, 'messages') }}
        </label>
        <div class="col-md-2">
          <div class="form-control input-sm text-center">
            {{ task.starttime|date('d-m-Y H:i') }}
          </div>
        </div>
      </div>

      <div class="form-group field_text">
        <label class="col-md-2 control-label">
          {{ 'task.created_by'|trans({}, 'messages') }}
        </label>
        <div class="col-md-2">
          <div class="form-control input-sm text-center">
            {{ task.user }}
          </div>
        </div>
        <label class="col-md-2 control-label">
          {{ 'task.last_comment'|trans({}, 'messages') }}
        </label>
        <div class="col-md-2">
          <div class="form-control input-sm text-center">
            {% if lastComment is not null %}
              {{ lastComment.publishedAt|date('d-m-Y H:i') }}
            {% endif %}
          </div>
        </div>
        <label class="col-md-2 control-label">
          {{ 'task.last_modify'|trans({}, 'messages') }}
        </label>
        <div class="col-md-2">
          <div class="form-control input-sm text-center">
            {% if lastEdit is not null %}
              {{ lastEdit.editedAt|date('d-m-Y H:i') }}
            {% endif %}
          </div>
        </div>
      </div>

      <div class="form-group field_string">
        <label class="col-md-2 control-label">
          {{ 'task.description'|trans({}, 'messages') }}
        </label>
        <div class="col-md-10">
          <div class="form-control input-sm">
            {{ task.description }}
          </div>
        </div>
      </div>

    <div class="container-fluid">
      <a href="{{ path("editTask", {'id':task.id }) }}" class="btn btn-sm btn-success">
        <i class="glyphicon glyphicon-edit"> {{ 'btn.edit'|trans({}, 'buttons') }}</i>
      </a>
      <a href="{{ path("deleteTask", {'id':task.id }) }}" class="btn btn-sm btn-danger">
        <i class="glyphicon glyphicon-remove"> {{ 'btn.delete'|trans({}, 'buttons') }}</i>
      </a>
      <a href="#" class="edit btn btn-sm btn-warning">
        <i class="glyphicon glyphicon-comment"> {{ 'btn.comment'|trans({}, 'buttons') }}</i>
      </a>
      <a href="{{ path('listTask') }}" class="btn btn-sm btn-default">
        <i class="glyphicon glyphicon-share-alt"> {{ 'btn.back'|trans({}, 'buttons') }}</i>
      </a>
    </div>

    {% if task.state != "Cerrada" %}
      <div id="comment" class="container-fluid">
        {{ render(controller('AppBundle:Comment:commentForm',{'task': task.id})) }}
      </div>
    {% endif %}

    <div class="comments-table widget-content">
      <table id="contacts" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th colspan="2">{{ 'table.task_comments'|trans({}, 'messages') }}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          {% for comments in comment %}
              <td class="col-md-1">{{ comments.user }}<br>{{ comments.publishedat|date('d-m-Y H:i') }}
               {% if is_granted('MODIFY', comments) %}
                 <a href="{{ path('editComment', { 'id':comments.id, 'task': task.id })  }}" class="btn btn-xs btn-success"/>
                  <i class="glyphicon glyphicon-edit"></i>
                 </span>
                 <a href="{{ path('deleteComment', { 'id':comments.id, 'task': task.id }) }}" class="btn btn-xs btn-danger">
                  <i class="glyphicon glyphicon-remove"></i>
                 </a>
                </td>
               {% endif %}
               <td class="commentContent col-md-7">{{ comments.content|nl2br }}
                {% if comments.editedAt is not null %}
                  {% include 'includes/editedComment.html.twig' %}
                {% endif %}
               </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('assets/vendor/bootstrap/dist/js/comment.js') }}"></script>
{% endblock %}
