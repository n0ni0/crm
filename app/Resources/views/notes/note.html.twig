{% extends 'layout.html.twig' %}

{% block panel_title %}Notas{% endblock %}

{% block panel_body %}
  <div id="main" class="container">
    <div class="form-horizontal">

      <div class="form-group field_string">
        <label class="col-md-2 control-label">
          Título:
        </label>
        <div class="col-md-10">
          <div class="form-control">
            {{ note.title }}
          </div>
        </div>
      </div>

      <div class="form-group field_text">
        <label class="col-md-2 control-label">
          Autor:
        </label>
        <div class="col-md-10">
          <div class="form-control">
            {{ note.user }}
          </div>
        </div>
      </div>

      <div class="form-group field_string">
        <label class="col-md-2 control-label">
          Fecha de publicación
        </label>
        <div class="col-md-10">
          <div class="form-control">
            {{ note.date|date('d-m-Y') }}
          </div>
        </div>
      </div>

      <div class="form-group field_text">
        <label class="col-md-2 control-label">
          Contenido:
        </label>
        <div class="col-md-10">
          <textarea class="form-control" rows="20">
            {{ note.content }}
          </textarea>
        </div>
      </div>

    </div>
  </div>

  </div>
  </div>
  <div class="panel-footer">
    <a href="#" class="btn btn-md btn-success">
      <i class="glyphicon glyphicon-edit"></i>
    </a>
    <a href="#" class="btn btn-md btn-danger">
      <i class="glyphicon glyphicon-remove"></i>
    </a>
    <a href="#" class="btn btn-md btn-default">Volver</a>
    </div>
{% endblock %}



