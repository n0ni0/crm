{% extends 'layout.html.twig' %}

{% block content%}
  <div class="container col-md-10 col-md-offset-1">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Clientes</h3>
      </div>
      <div class="panel-body">
  </div>
  <div class="container-fluid">
    <div class="widget-content">
      <table id="customers" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th>Móvil</th>
            <th>Email</th>
            <th>Empresa</th>
            <th>Perfíl</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            {% for customers in customers %}
              <td>{{ customers.name }}</td>
              <td>{{ customers.lastname }}</td>
              <td>{{ customers.phone }}</td>
              <td>{{ customers.mobilephone }}</td>
              <td>{{ customers.email }}</td>
              <td>{{ customers.company }}</td>
              <td>
                <a href={{ path('customerProfile', {'id': customers.id}) }}>
                  <button width="auto" type="button" class="btn btn-success btn-xs">
                    <i class="glyphicon glyphicon-user">
                  </button></a></td>
          </tr>
            {% endfor %}
          <tr>
        </tbody>
      </table>
    </div>
    {{ knp_pagination_render(customers) }}
  </div>
    </div>
  </div>
{% endblock %}



